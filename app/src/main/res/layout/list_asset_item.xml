<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tatabuku_biru_muda">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp">
                    
                    <ImageView
                        android:id="@+id/foto_asset"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:src="@drawable/car"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:id="@+id/merk_asset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toyota Avanza tipe G 2019"
                            android:textColor="@color/hijau_tatabuku"/>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="Tahun Perolehan  "
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/tahun_asset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2019"
                                android:textSize="10dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="Nilai Perolehan"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/hargabeli_asset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Rp. 220.000.000.00"
                                android:textSize="10dp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="Depresiasi"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/depresiasi_asset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 50.000.000.00"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:text="Nilai Buku"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/nilaibuku_asset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp. 170.000.000.00"
                                android:textSize="10dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginEnd="4dp">

                        <TextView
                            android:id="@+id/kode_asset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="FA-001/2019"
                            android:textSize="8dp"
                            android:layout_marginBottom="30dp"/>


                        <ImageView
                            android:id="@+id/icon_asset"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/car"
                            android:layout_gravity="bottom"/>


                    </LinearLayout>


                </LinearLayout>
                
            </FrameLayout>
                
                


    </androidx.cardview.widget.CardView>

</LinearLayout>