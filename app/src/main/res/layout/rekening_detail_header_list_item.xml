<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginHorizontal="12dp">

    <FrameLayout
        android:id="@+id/timeline_dot"
        android:layout_width="44dp"
        android:layout_height="44dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/rekening_header_list_dot" />

        <View
            android:id="@+id/center_line"
            android:layout_width="1dp"
            android:layout_height="44dp"
            android:background="@color/hijau_tatabuku"
            android:layout_marginStart="21.5dp"
            android:layout_gravity="top"/>

    </FrameLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_gravity="center_vertical"
        android:textSize="16dp"
        android:textColor="@color/hijau_tatabuku"
        android:text="Hari ini, 25 Agustus 2020"/>

</FrameLayout>